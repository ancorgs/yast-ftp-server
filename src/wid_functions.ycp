  } else {     
     UI::ChangeWidget(`id( "UmaskAnon" ), `ValidChars, "01234567");
     UI::ChangeWidget(`id( "UmaskLocal" ),`ValidChars, "01234567");
     UI::ChangeWidget(`id("Banner"), `Value, FtpServer::ValueUIEdit("Banner"));
