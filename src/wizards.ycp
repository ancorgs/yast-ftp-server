textdomain "ftpd";

import "Sequencer";
import "Wizard";

include "ftpd/complex.ycp";
include "ftpd/dialogs.ycp";



/**
 * Main workflow of the ftpd configuration
 * @return sequence result
 */
any MainSequence() {

    /* FIXME: adapt to your needs */
    map aliases = $[
	"conf"		:   ``( RunFTPDialogsVsftpd()),
    ];

    /* FIXME: adapt to your needs */
    map sequence = $[
	"ws_start" : "conf",
	"conf" : $[
	    `abort	: `abort,
	    `next	: `next,
	],

    ];

    any ret = Sequencer::Run(aliases, sequence);

    return ret;
}

