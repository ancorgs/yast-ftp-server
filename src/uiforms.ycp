term FTPPerforSettings() {
  term dialog = `VBox (
    `Frame ( _("Performance Settings"),
      `HBox(`HSpacing(1),`VBox (	
	`Left(`HSquash(`MinWidth(20,`IntField(`id("MaxIdleTime"), _("&Max Idle Time [minutes]"),0,1440,0)))),
	`Left(`HSquash(`MinWidth(20,`IntField(`id("MaxClientsPerIP"), _("Max Cli&ents for One IP"),0,50,0)))),
	`Left(`HSquash(`MinWidth(20,`IntField(`id("MaxClientsNumber"), _("Ma&x Clients"),0,9999,0))))
      ), `HStretch ())
    ), //end of `Frame ( _("Performance Settings")
    `VSpacing(1),   
    `Frame ( _("Rate Settings"),   		
      `HBox(`HSpacing(1),`VBox (
	`Left(`HSquash(`MinWidth(20,`IntField(`id("LocalMaxRate"),_("&Local Max Rate [kb/s]"),0,10000000,0)))),
	`Left(`HSquash(`MinWidth(20,`IntField(`id("AnonymMaxRate"),_("Anonymous Max &Rate [kb/s]"),0,10000000,0))))
      ), `HStretch ())
    ), //end of `Frame ( _("Rate Settings")
    `VStretch()
  );
  return dialog;
}


term FTPAnonSettings() {
  term dialog = `VBox (		
    `Frame ( _("Enable/Disable Anonymous and Local Users"),  	
      `RadioButtonGroup(`id("AnonAuthen"), 
	`HBox(`HSpacing(1),`VBox(
	  `Left(`RadioButton(`id(0), "Anonymo&us Only")),
	  `Left(`RadioButton(`id(1), "Aut&henticated Users Only" )),
	  `Left(`RadioButton(`id(2), "&Both", true))
	))
      ) //end of `HBox(`HSpacing(1),`RadioButtonGroup(`id("AnonAuthen")
    ), //end of `Frame ( _("Enable/Disable Anonymous and Local Users")
    `VSpacing(1),   
    `Frame ( _("Anonymous Settings"),   			
      `HBox(`HSpacing(1),`VBox (
	`Left(`CheckBox (`id("AnonyReadOnly"), _("Anon&ymous Can Upload"))),
	`Left(`CheckBox (`id("AnonymCreatDirs"), _("Anonymou&s Can Create Directories")))		
      ))					
    ), //end of `Frame ( _("Anonymous Settings")
    `VStretch()
  );
  return dialog;
}


term VSFTPDAddSettings() {
  term dialog = `VBox (
    `Frame ( _("Additional Settings"),
      `HBox(`HSpacing(1),`VBox (				
	`Left(`TextEntry(`id("Banner"),_("&Welcome message")))
      ))
    ), //end of `Frame ( _("Additional Settings")
    `VSpacing(1),   
    `CheckBoxFrame(`id("SSLEnable"), "Sec&urity Settings", true,	
      `HBox(`HSpacing(1),`VBox (
	`Left(`ComboBox(`id("SSLVersion"), "S&elect Version of SSL",
	        ["Enabled SSL v2","Disable SSL v2","Enabled SSL v3","Disable SSL v3",
		 "Enabled SSL v2 & v3", "Disable SSL v2 & v3" ] )),
	`Left(`CheckBox(`id("TLS"), _("Enable &TLS")))
      ))
    ), //end of `CheckBoxFrame(`id("SSLEnable"), "Sec&urity Settings", true
    `VStretch()
  );
  return dialog;
}

term PUREFTPDSecSettings() {
  term dialog = `VBox (
    `Frame ( _("Additional Settings"),
      `HBox(`HSpacing(1),`VBox (				
	`Left(`CheckBox(`id("AntiWarez"), _("Disable Downloading &Unvalidated Data")))
      ))
    ), //end of `Frame ( _("Additional Settings")
    `VSpacing(1),
    `Frame ( _("Security Settings"),
      `RadioButtonGroup(`id("SSL"), 
	`HBox(`HSpacing(1),`VBox(
	  `Left(`RadioButton(`id(0), "&Disable SSL/TLS")),
	  `Left(`RadioButton(`id(1), "Accept &SSL and TLS", true)),
	  `Left(`RadioButton(`id(2), "&Refuse Conections Without SSL/TLS"))
	))
      ) //end of `RadioButtonGroup(`id("SSL")
    ), //end of `Frame ( _("Security Settings")
    `VStretch()
  );
  return dialog;
}

