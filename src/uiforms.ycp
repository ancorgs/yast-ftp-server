/**
 * UI for TreeDialogs
 */
term FTPGenSettingsVsftpd() {
  term dialog = `VBox(
    `Frame ( _("General Settings"),
      `HBox(`HSpacing(1), `VBox (
	`Left(`CheckBox(`id("ChrootEnable"), _("&Chroot Everyone"))),	
	`Left(`CheckBox(`id("VerboseLogging"), _("&Verbose Logging"))),	
	`Left(`HSquash( `HBox (`Left(`TextEntry(`id("UmaskAnon"), _("&Umask for Anonymous"))),
	`Left(`TextEntry(`id("UmaskLocal"), _("Uma&sk for Authenticated Users"))))))    
      ))
    ),// end of `Frame ( _("General Settings")
    `VSpacing(1),
    `Frame ( _("FTP directories"),
      `HBox(`HSpacing(1), `VBox (
	`Left(`HBox(
	  `TextEntry(`id("FtpDirAnon"), _("Ftp Directory f&or Anonymous Users")),
	  `VBox ( `Label(""),
	    `PushButton ( `id ( "SelectDirAnon" ), `opt ( `hstretch ),  _("Select director&y..."))
	  )
	)),
	`Left(`HBox(
	  `TextEntry(`id("FtpDirLocal"), _("&Ftp Directory for Autheticated Users")),
	  `VBox ( `Label(""),
	    `PushButton ( `id ( "SelectDirLocal" ), `opt ( `hstretch ),  _("Select d&irectory..."))
	  )
	))
      )) // end of `HBox(`HSpacing(1)`VBox (
    ), //end of `Frame ( _("FTP directories")
    `VSpacing(1),   
    `Frame ( _("Passiv Mode Settings"),   		
      `HBox(`HSpacing(1), `Left(`HSquash(`HBox ( 
	`Left(`IntField(`id("PasMinPort"),  _("&Min Port for Pas. Mode"),0,65535,0)),			
	`Left(`IntField(`id("PasMaxPort"),  _("Max Por&t for Pas. Mode"),0,65535,0)),
	`HStretch()
      ))))
    ), //end of `Frame ( _("Passiv Mode Settings")    
    `VStretch()
  );//end of term dialog =
  return dialog;
}


